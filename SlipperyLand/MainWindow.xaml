<Window x:Class="SlipperyLand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:SlipperyLand.Converters"
        xmlns:local="clr-namespace:SlipperyLand"
        xmlns:viewmodel="clr-namespace:ViewModel;assembly=ViewModel"
        xmlns:res="clr-namespace:SlipperyLand.Properties"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="{x:Static res:Resources.AppName}"
        ResizeMode="NoResize"
        FontFamily="Cascadia Mono"
        WindowStyle="None"
        Width="512"
        Height="512"
        >

    <Window.Resources>
        <ResourceDictionary>

            <conv:BitmapConverter x:Key="BitmapConverter" />

            <Style TargetType="{x:Type Window}">
                <Setter Property="Background"
                        Value="Black" />
                <Style.Triggers>
                    <Trigger Property="{Binding Path=IsActive, RelativeSource={RelativeSource Self}}"
                             Value="False">
                        <Setter Property="Background"
                                Value="LightGray" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ExitButton"
                   TargetType="Label">
                <Setter Property="Focusable"
                        Value="True" />
                <Setter Property="Foreground"
                        Value="White" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Center" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="FontFamily"
                        Value="Wingdings 2" />
                <Setter Property="Content"
                        Value="Î" />
                <Setter Property="Width"
                        Value="{Binding ActualHeight, RelativeSource={RelativeSource Self}}" />
                <Setter Property="HorizontalAlignment"
                        Value="Right" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver"
                             Value="True">
                        <Setter Property="Background"
                                Value="Red" />
                        <Setter Property="Content"
                                Value="Ò" />
                    </Trigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="C"
                    Command="{Binding ChangeRandomCellCommand}" />
    </Window.InputBindings>

    <Grid>
        <Grid Margin="3">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="16*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  MouseDown="Grid_MouseDown">
                <Label Content="{x:Static res:Resources.AppName}"
                       Foreground="White" />
                <Label Name="ExitButton"
                       Style="{StaticResource ExitButton}"
                       MouseDown="ExitButton_MouseDown" />
            </Grid>

            <Image Grid.Row="1"
                   Source="{Binding MapLayerImage, Converter={StaticResource BitmapConverter}}"
                   Stretch="None"
                   SnapsToDevicePixels="True"
                   UseLayoutRounding="True"
                   RenderOptions.BitmapScalingMode="HighQuality" />
        </Grid>
    </Grid>
</Window>
