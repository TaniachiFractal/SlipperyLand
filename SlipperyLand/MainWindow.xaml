<Window x:Class="SlipperyLand.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:SlipperyLand.Converters"
        xmlns:local="clr-namespace:SlipperyLand"
        xmlns:viewmodel="clr-namespace:ViewModel;assembly=ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        FontFamily="Cascadia Mono"
        Title="MainWindow"
        Width="512"
        Height="512">
    <Window.Resources>
        <ResourceDictionary>

            <conv:BitmapConverter x:Key="BitmapConverter" />

        </ResourceDictionary>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="C"
                    Command="{Binding ChangeRandomCellCommand}" />
    </Window.InputBindings>
    <Grid>

        <Image Source="{Binding MapLayerImage, Converter={StaticResource BitmapConverter}}"
               Stretch="UniformToFill"
               SnapsToDevicePixels="True"
               UseLayoutRounding="True"
               RenderOptions.BitmapScalingMode="HighQuality" />

    </Grid>
</Window>
