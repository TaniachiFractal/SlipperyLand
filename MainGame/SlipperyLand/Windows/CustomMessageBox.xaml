<local:ParentWindow x:Class="SlipperyLand.Windows.CustomMessageBox"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:SlipperyLand.Windows"
                    xmlns:controls="clr-namespace:SlipperyLand.Controls"
                    d:DataContext="{d:DesignInstance Type=local:CustomMessageBox}"
                    mc:Ignorable="d"
                    WindowStartupLocation="CenterScreen"
                    Background="Black"
                    Width="200"
                    Height="150"
                    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <controls:TopBar Grid.Row="0"
                         x:Name="TopBar" />
        <Label Grid.Row="1"
               x:Name="Message"
               Foreground="White"
               HorizontalAlignment="Center"
               VerticalAlignment="Center" FontSize="20" />
    </Grid>
</local:ParentWindow>
